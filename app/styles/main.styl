.icon
  position relative
  text-align center
  width 0px
  height 0px
  padding 20px
  border-top-right-radius 20px
  border-top-left-radius 20px
  border-bottom-right-radius 20px
  border-bottom-left-radius 20px
  color #FFFFFF
  i
    font-size 20px
    position absolute
    left 9px
    top 10px
  &.social
    float left
    margin 0 5px 0 0
    cursor pointer
    background color-second
    color #fff
    transition 0.5s
    &:hover
      opacity: 0.7
      transition 0.5s
    &.fb
      i
        left 13px
        top 10px
    &.tw
      i
        left 11px
    &.in
      i
        left 11px
.project
  lost-utility: clearfix
  padding: 50px 0
  *
    transition: all 0.5s ease
  header
    padding-top: 1.414em
    lost-column: 1/3
    float: left
    +mobile()
      lost-column: 1/1
    +desktop()
      opacity: 0.7
    h2
      margin 0.5em 0
      font-weight: 600
      color: color-primary
  .footer-links
    margin: 20px 0
    a
      margin: 20px 0
  .thumb
    lost-column: 2/3
    float: right
    +mobile()
      lost-column: 1/1
    +desktop()
      opacity: 0.3
  &:hover
    .thumb,
    header
      +desktop()
        opacity: 1
  .tool
    strong
      text-transform: uppercase
      font-weight: bold
      font-size: .8em

strong.item
  text-transform: uppercase
  font-weight: bold
  font-size: .8em

.about
  h3, h4, h5
    font-weight: 600
    color: color-pickled-bluewood

  h4
    color: color-hippie-blue
